<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="SwipeToLoadLayout">
        <attr name="refresh_enabled" format="boolean" />
        <attr name="load_more_enabled" format="boolean" />

        <attr name="swipe_style" format="enum">
            <enum name="classic" value="0" />
            <enum name="above" value="1" />
            <enum name="blew" value="2" />
            <enum name="scale" value="3" />
        </attr>

        <attr name="drag_ratio" format="float" />

        <attr name="refresh_trigger_offset" format="dimension" />
        <attr name="load_more_trigger_offset" format="dimension" />
        <attr name="refresh_final_drag_offset" format="dimension" />
        <attr name="load_more_final_drag_offset" format="dimension" />

        <attr name="swiping_to_refresh_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_refreshing_scrolling_duration" format="integer" />
        <attr name="refresh_complete_delay_duration" format="integer" />
        <attr name="refresh_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_refreshing_scrolling_duration" format="integer" />
        <attr name="swiping_to_load_more_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_loading_more_scrolling_duration" format="integer" />
        <attr name="load_more_complete_delay_duration" format="integer" />
        <attr name="load_more_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_loading_more_scrolling_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="IndicatorLayout">
        <attr name="direction" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="arrow_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
        </attr>
        <attr name="arrow_margin" format="dimension" />
        <attr name="rect_background" format="reference|color"/>
        <attr name="left_arrow_img" format="reference"/>
        <attr name="right_arrow_img" format="reference"/>
        <attr name="top_arrow_img" format="reference"/>
        <attr name="bottom_arrow_img" format="reference"/>

    </declare-styleable>

    <!-- 美颜 -->
    <declare-styleable name="Theme">
        <attr name="discreteSeekBarStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="DiscreteSeekBar">
        <attr name="dsb_min" format="integer|dimension" />
        <attr name="dsb_max" format="integer|dimension" />
        <attr name="dsb_value" format="integer|dimension" />
        <attr name="dsb_mirrorForRtl" format="boolean" />
        <attr name="dsb_allowTrackClickToDrag" format="boolean" />
        <attr name="dsb_progressColor" format="color|reference" />
        <attr name="dsb_trackColor" format="color|reference" />
        <attr name="dsb_indicatorTextAppearance" format="reference" />
        <attr name="dsb_indicatorColor" format="color|reference" />
        <attr name="dsb_indicatorElevation" format="dimension" />
        <attr name="dsb_indicatorFormatter" format="string|reference" />
        <attr name="dsb_rippleColor" format="color|reference" />
        <attr name="dsb_indicatorPopupEnabled" format="boolean" />
        <attr name="dsb_trackHeight" format="integer|dimension" />
        <attr name="dsb_scrubberHeight" format="integer|dimension" />
        <attr name="dsb_thumbSize" format="integer|dimension" />
        <attr name="dsb_indicatorSeparation" format="integer|dimension" />
    </declare-styleable>


    <declare-styleable name="GoldBorderRoundedView">
        <!--勋章大小-->
        <attr name="medal_size" format="dimension" />
        <attr name="user_avatar_width" format="dimension" />
        <attr name="user_avatar_height" format="dimension" />
        <!--是否展示头像边缘的边框-->
        <attr name="can_show_avatar_round_border" format="boolean" />
        <!--是否显示活动边框-->
        <attr name="can_show_activity_border" format="boolean" />
        <!--是否展示土豪边框，有些界面需要展示土豪边框-->
        <attr name="can_show_tuhao_golden_border" format="boolean" />
        <!--普通头像边缘边框的宽度目前用作白色边框的宽度-->
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="reference|color" />
        <!--土豪头像边缘边框的宽度-->
        <attr name="tuhao_border_width" format="dimension" />

        <attr name="medal_margin" format="dimension" />


    </declare-styleable>

    <declare-styleable name="AdjustLayout">
        <!--每行列数-->
        <attr name="column_count" format="integer" />
        <!--每个条目间距-->
        <attr name="division" format="dimension" />
        <!--每行之间的间距-->
        <attr name="raw_margin" format="dimension" />

    </declare-styleable>


    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>


    <declare-styleable name="CustomSwipeRefreshLayout">
        <attr name="enable_top_progress_bar" format="boolean" />
        <attr name="refresh_mode" format="enum">
            <enum name="swipe_mode" value="1" />
            <enum name="pull_mode" value="2" />
        </attr>
        <attr name="time_out_return_to_top" format="integer" />
        <attr name="time_out_refresh_complete" format="integer" />
        <attr name="return_to_top_duration" format="integer" />
        <attr name="return_to_header_duration" format="integer" />
        <attr name="keep_refresh_head" format="boolean" />
        <attr name="enable_refreshing_return_to_header_top" format="boolean" />
        <attr name="top_progress_bar_color_1" format="color|reference" />
        <attr name="top_progress_bar_color_2" format="color|reference" />
        <attr name="top_progress_bar_color_3" format="color|reference" />
        <attr name="top_progress_bar_color_4" format="color|reference" />
    </declare-styleable>

    <!-- 下拉样式 -->
    <declare-styleable name="REFRESH_LISTVIEW">
        <!-- 是否显示提示文字，默认不显示 -->
        <attr name="show_tips" format="boolean"></attr>
    </declare-styleable>


    <declare-styleable name="AutoFitNameLabelView_Layout">

        <attr name="fit_name" format="boolean" />
        <attr name="extra_width" format="dimension" />
    </declare-styleable>

    <!-- ViewPagerIndicator -->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpi_selected_color" format="color|reference"/>
        <attr name="vpi_default_color" format="color|reference"/>
        <attr name="vpi_radius" format="dimension|reference"/>
        <attr name="vpi_length" format="dimension|reference"/>
        <attr name="vpi_distance" format="dimension|reference"/>
        <attr name="vpi_num" format="integer"/>
        <attr name="vpi_indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
        </attr>
        <attr name="vpi_distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
        <attr name="vpi_animation" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="BannerIndicator">
        <attr name="hideColor" format="color" />
        <attr name="highLightColor" format="color" />
        <attr name="cycleRadius" format="dimension" />
        <attr name="cycleGap" format="dimension" />
        <attr name="highlightScale" format="float" />
        <attr name="count" format="integer" />
        <attr name="position" format="integer" />
        <attr name="round_bg" format="boolean"/>
        <attr name="bg_paddingH" format="dimension" />
        <attr name="bg_paddingV" format="dimension" />
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TextViewSwitcher">
        <attr name="tx_color" format="color"/>
        <attr name="tx_size" format="dimension"/>
        <attr name="tx_gravity" format="integer"/>
        <attr name="tx_clickable" format="boolean"/>
        <attr name="tx_animIn" format="reference"/>
        <attr name="tx_animOut" format="reference"/>
    </declare-styleable>


    <!-- 圆形进度条 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundMaxColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="roundTextColor" format="color" />
        <attr name="roundTextSize" format="dimension" />
        <attr name="roundMax" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="rpTextSize" format="dimension" />
    </declare-styleable>

    <!-- MagicTextView -->
    <declare-styleable name="MagicTextView">
        <attr name="innerShadowColor" format="color" />
        <attr name="innerShadowRadius" format="dimension" />
        <attr name="innerShadowDx" format="dimension" />
        <attr name="innerShadowDy" format="dimension" />

        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowRadius" format="dimension" />
        <attr name="outerShadowDx" format="dimension" />
        <attr name="outerShadowDy" format="dimension" />

        <attr name="typeface" format="string" />

        <attr name="foreground" format="reference|color" />
        <attr name="backgroundMagic" format="reference|color" />

        <attr name="strokeWidthMagic" format="dimension" />
        <attr name="strokeMiter" format="dimension" />
        <attr name="strokeColorMagic" format="color" />
        <attr name="strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>
</resources>